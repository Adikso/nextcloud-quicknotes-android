<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sort_header"
        style="@style/Base.DialogWindowTitle.AppCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin"
        android:text="@string/attach_to_note"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/takeAPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:paddingStart="@dimen/standard_padding"
                android:paddingTop="@dimen/standard_half_padding"
                android:paddingEnd="@dimen/standard_half_padding"
                android:paddingBottom="@dimen/standard_half_padding"
                android:contentDescription="@string/menu_item_sort_by_title_a_z"
                android:src="@drawable/ic_attach_photo" />

            <TextView
                android:id="@+id/takeAPhotoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="middle"
                android:paddingStart="@dimen/zero"
                android:paddingTop="@dimen/standard_half_padding"
                android:paddingEnd="@dimen/standard_half_padding"
                android:paddingBottom="@dimen/standard_half_padding"
                android:singleLine="true"
                android:text="@string/take_a_photo"
                android:textSize="@dimen/two_line_primary_text_size"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_half_margin">

            <ImageButton
                android:id="@+id/takeVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:paddingStart="@dimen/standard_padding"
                android:paddingTop="@dimen/standard_half_padding"
                android:paddingEnd="@dimen/standard_half_padding"
                android:paddingBottom="@dimen/standard_half_padding"
                android:contentDescription="@string/menu_item_sort_by_date_newest_first"
                android:src="@drawable/ic_attach_video"/>

            <TextView
                android:id="@+id/takeVideoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="middle"
                android:paddingStart="@dimen/zero"
                android:paddingTop="@dimen/standard_half_padding"
                android:paddingEnd="@dimen/standard_half_padding"
                android:paddingBottom="@dimen/standard_half_padding"
                android:singleLine="true"
                android:text="@string/take_a_video"
                android:textSize="@dimen/two_line_primary_text_size" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_half_margin"
            android:layout_marginBottom="@dimen/standard_margin">

            <ImageButton
                android:id="@+id/addFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:paddingStart="@dimen/standard_padding"
                android:paddingTop="@dimen/standard_half_padding"
                android:paddingEnd="@dimen/standard_half_padding"
                android:paddingBottom="@dimen/standard_half_padding"
                android:contentDescription="@string/menu_item_sort_by_date_updated_first"
                android:src="@drawable/ic_attach_file" />

            <TextView
                android:id="@+id/addFileText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="middle"
                android:paddingStart="@dimen/zero"
                android:paddingTop="@dimen/standard_half_padding"
                android:paddingEnd="@dimen/standard_half_padding"
                android:paddingBottom="@dimen/standard_half_padding"
                android:singleLine="true"
                android:text="@string/add_file"
                android:textSize="@dimen/two_line_primary_text_size" />
        </TableRow>

    </TableLayout>

</LinearLayout>